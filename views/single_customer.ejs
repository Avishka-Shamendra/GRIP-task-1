<%- include('_header') %>
<div class="container py-4 text-center">
    <div>
        <h3>Transfer Money</h3>
        <hr>
        <% if(error) { %>
            <div class="alert alert-danger text-center" role="alert">
                <%=error%>
            </div>
        <%} %>
        <% if (success) {%>
            <div class="alert alert-success text-center" role="alert">
                <%=success%>
            </div>
        <% } %>
        <div class="card p-3 shadow-lg border-primary">
            <h5 class="text-center">Tranfer Details</h5>
            <hr>
            <form class="p-3 m-3" method="POST" action="/transfer">
                <div class="form-group row">
                  <label for="myBalance" class="col-sm-6 col-form-label">My Account Balance</label>
                  <div class="col-sm-6">
                    <input type="text" class="form-control" id="myBalance" value="<%=userDetails.balance%>" disabled>
                  </div>
                </div>
                <div class="form-group row">
                    <label for="recName" class="col-sm-6 col-form-label">Name of Reciever</label>
                    <div class="col-sm-6">
                      <input type="text" class="form-control" id="recName" value="<%=recieverDetails.name%>" disabled>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="recemail" class="col-sm-6 col-form-label">Email of Reciever</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" id="recemail" value="<%=recieverDetails.email%>" disabled>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="recBalance" class="col-sm-6 col-form-label">Account Balance of Reciever</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" id="recBalance" value="<%=recieverDetails.balance%>" disabled>
                    </div>
                </div> 
                <div class="form-group row">
                    <label for="amount" class="col-sm-6 col-form-label">Amount to Transfer</label>
                    <div class="col-sm-6">
                        <input type="number" class="form-control" id="amount" name="amount" required max="999999" min="1">
                    </div>
                </div>
                <input type="hidden" name="recId" id="redId" value="<%=recieverDetails.id%>">
                <input type="hidden" name="senderId" id="senderId" value="<%=userDetails.id%>">
                <button type="submit" class="btn btn-primary">Confirm Transfer</button> 
              </form>
              
        </div>

    </div>

</div>
<%- include('_footer') %>