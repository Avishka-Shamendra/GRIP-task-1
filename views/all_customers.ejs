<%- include('_header') %>
<div class="container py-4 text-center">
        <h3 class="card-title">All Customers</h3>
        <h4>My Account Balance: <%=userDetails.balance.toFixed(2)%></h4>
        <hr>
        <% if(error) { %>
            <div class="alert alert-danger text-center" role="alert">
                <%=error%>
            </div>
        <%} %>
        <% if (success) {%>
            <div class="alert alert-success text-center" role="alert">
                <%=success%>
            </div>
        <% } %>
        <div class="p-3">
            <% if(allCustomers && allCustomers.length!=0) {%>
                    <div class='card p-3 shadow border-primary rounded' style="overflow-x:auto;">
                        <table class="table table-striped">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">Customer ID</th>
                                    <th scope="col">Full Name</th>
                                    <th scope="col">E-mail</th>
                                    <th scope="col">Account Balance</th>
                                    <th>Transfer Money</th>
                                </tr>
                            </thead>
                            <tbody>
    
                                <% allCustomers.forEach(function(customer){%>
                                    <tr>
                                        <td><%=customer.id%></td>
                                        <td><%=customer.name%></td>
                                        <td><%=customer.email%></td>
                                        <td><%=customer.balance.toFixed(2)%></td>
                                        <td><a href="/transfer/<%=customer.id%>" class="btn btn-outline-primary" role="button">Transfer</a></td>
                                    </tr>
                                <%});%>
                            </tbody>
                        </table>
                    </div>
                <% }else{ %>
                    <div class="alert alert-warning text-center">
                        <strong>No Customers Available</strong>
                    </div>
                <%}%>
        </div>

    </div>

</div>
<%- include('_footer') %>